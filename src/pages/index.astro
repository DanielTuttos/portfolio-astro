---
import Badge from '@/components/Badge.astro';
import Layout from '@/layouts/Layout.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import GitHub from '@/icons/GitHub.astro';
import Mail from '@/icons/Mail.astro';
import BriefCase from '@/icons/BriefCase.astro';
import SocialPill from '@/components/SocialPill.astro';
import Experience from '@/components/Experience.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import Code from '@/icons/Code.astro';
import Instagram from '@/icons/Instagram.astro';
import Projects from '@/components/Projects.astro';
import AboutMe from '@/components/AboutMe.astro';
import Profile from '@/icons/Profile.astro';
---

<Layout
  title="Portfolio de Daniel Romero - Desarrollador y Programador Web y Movil con 3 anios de experiencia"
  description="Contrata a Daniel para crear tu aplicacion web o movil. Desarrollador Web y Movil. Especializado en crear aplicaciones unicas">
  <main class="px-4">
    <SectionContainer class="py-32 pb-22" id="top">
      <img
        class="rounded-full size-12 mb-4"
        src='/assets/daniel.jpeg'
        alt="Daniel Photo"
      />
      <h1
        class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hola, soy Daniel Romero<a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/daniel-romero-aguirre-086a4255/"
          target="_blank"
          rel="noopener">
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+3 años de experiencia en </span>
        <span class="text-yellow-200/90">Desarrollar Aplicaciones Web y Móvil.</span>
        <span class="text-red-100/90">De Guayas - Ecuador.</span>
        <span class="opacity-85"
          >Especializado en crear aplicaciones interactivas a medida y únicas con diseño personalizado.</span
        >
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/daniel-romero-aguirre-086a4255/">
          <LinkedIn class="size-4 md:size-6" />
          LinkeIn
        </SocialPill>
        <SocialPill href="https://github.com/DanielTuttos">
          <GitHub class="size-4 md:size-6" />
          GitHub
        </SocialPill>
		<SocialPill href="https://www.instagram.com/danielromeroag/">
			<Instagram class="size-4 md:size-6" />
			Instagram
		  </SocialPill>
        <SocialPill href="mailto:danielromeroag@gmail.com">
          <Mail class="size-4 md:size-6" />
          danielromeroag@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefCase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Code class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="about">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Profile class="size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
