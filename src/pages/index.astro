---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import GitHub from '../icons/GitHub.astro';
import Mail from '../icons/Mail.astro';
import SocialPill from '../components/SocialPill.astro';
---

<Layout
  title="Portfolio de Daniel Romero - Desarrollador y Programador Web y Movil con 3 anios de experiencia"
  description="Contrata a Daniel para crear tu aplicacion web o movil. Desarrollador Web y Movil. Especializado en crear aplicaciones unicas">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full size-12 mb-4"
        src="https://media.licdn.com/dms/image/C4E03AQHT19fjVaAVuQ/profile-displayphoto-shrink_200_200/0/1577113326293?e=2147483647&v=beta&t=zXzadQvCfZIsCKrt3W76HzoorfGnFLky9EMlqYM-Vno"
        alt="Daniel Photo"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy Daniel Romero <a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/daniel-romero-aguirre-086a4255/"
          target="_blank"
          rel="noopener">
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span>+3 anios de experiencia.</span>
        <span class="text-yellow-200/90">Desarrollador Web y Movil.</span>
        <span class="text-red-100/90">De Ecuador.</span>
        <span class="opacity-85"
          >Especializado en crear aplicaciones unicas.</span
        >
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <SocialPill
          href="https://www.linkedin.com/in/daniel-romero-aguirre-086a4255/">
          <LinkedIn class="size-6" />
          LinkeIn
        </SocialPill>
        <SocialPill href="https://github.com/DanielTuttos">
          <GitHub class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="https://github.com/DanielTuttos">
          <Mail class="size-6" />
          danielromeroag@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
